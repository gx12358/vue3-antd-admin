{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "baseUrl": "./",
    "strict": true,
    "allowJs": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "lib": ["DOM", "ESNext"],
    "types": ["vite/client", "unplugin-turbo-console/client"],
    "noImplicitAny": false,
    "skipLibCheck": true,
    "strictFunctionTypes": false,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": ["src/*"],
      "@gx-mock": ["mock/index.ts"],
      "@gx-mock/*": ["mock/*"],
      "@gx-config": ["config/index.ts"],
      "@gx-vuex": ["src/store/index.ts"],
      "@gx-admin/hooks/*": ["src/hooks/*"],
      "@gx-design/*": ["src/components/GDesign/*"],
      "@gx-admin/vite-config/*": ["internal/vite-config/*"],
    }
  },
  "include": [
    "tests/**/*.ts",
    "src/**/*.ts",
    "src/**/*.less",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "types/*.d.ts",
    "types/*.ts",
    "internal/**/*.ts",
    "internal/**/*.d.ts",
    "mock/*.ts",
    "mock/**/*.ts",
    "vite.config.ts"
  ],
  "exclude": ["node_modules", "dist", "**/*.js"]
}
